# Tests for end-to-end IREE support of *simple* models or their close
# derivatives.

load("//build_tools/bazel:iree_check_test.bzl", "iree_check_test_suite")
load("//build_tools/bazel:enforce_glob.bzl", "enforce_glob")

package(
    features = ["layering_check"],
    licenses = ["notice"],  # Apache 2.0
)

iree_check_test_suite(
    name = "check",
    srcs = enforce_glob(
        [
            "collatz.mlir",
            "edge_detection.mlir",
            "fullyconnected.mlir",
        ],
        include = ["*.mlir"],
    ),
    input_type = "stablehlo",
    target_backends_and_drivers = [
        ("vmvx", "local-task"),
        ("llvm-cpu", "local-task"),
        ("vulkan-spirv", "vulkan"),
        ("metal-spirv", "metal"),
    ],
)
