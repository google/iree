FROM gcr.io/iree-oss/cmake-bazel-frontends@sha256:60abf30296e323d519471dc8b876bf385dda4c0d921fb0fe792b0e69193b2056 AS final

# Note that NDK_VERSION should be kept in sync with the one in cmake-android.
# That actually means this isn't really an ARG because we cannot build this
# image with a different NDK version.
ARG NDK_VERSION=r21d
COPY --from=gcr.io/iree-oss/cmake-android@sha256:17f55b3093ac780aadbc7a28260de37482611f850262ed9d2949f1c83c84e2a5 "/usr/src/android-ndk-${NDK_VERSION}" "/usr/src/android-ndk-${NDK_VERSION}"
ENV ANDROID_NDK "/usr/src/android-ndk-${NDK_VERSION}"

